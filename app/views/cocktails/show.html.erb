<h2><%= @cocktail.name %></h2>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<p>
  <% @cocktail.doses.each do |dose| %>
  dose :
  <%= dose.description %> of
  <%= dose.ingredient.name %>
</p>
<%= link_to "delete the dose", dose_path(dose), method: :delete, data: { confirm: "delete this dose ?" }, class: "btn btn-primary" %>
<% end %>
<%= link_to "Add a dose", new_cocktail_dose_path(@cocktail), class: "btn btn-primary"%>
<h3><%= link_to "go to index", cocktails_path, class: "btn btn-primary" %></h3>